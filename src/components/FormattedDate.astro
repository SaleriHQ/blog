---
interface Props {
    date: Date;
    class?: string
}

const {date, class: className = ""} = Astro.props;
---

<time class=`text-stone-400 text-[14px] ${className}` datetime={date.toISOString()}>
    {
        date.toLocaleDateString('zh-cn', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
        })
    }
</time>
